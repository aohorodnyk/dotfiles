{{- if .is_darwin -}}
#!/usr/bin/env bash

echo "Installing JetBrains Mono Nerd font from Homebrew..."

brew install --cask font-jetbrains-mono-nerd-font
{{- else if .is_arch_like -}}
#!/usr/bin/env bash

echo "Installing JetBrains Mono Nerd font from Pacman..."

sudo pacman -S --noconfirm ttf-jetbrains-mono-nerd
{{- end -}}
