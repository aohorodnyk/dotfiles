{{- if .is_darwin -}}
#!/usr/bin/env bash

echo "Installing fish from Homebrew..."

brew install fish
{{- else if .is_debian_like -}}
#!/usr/bin/env bash

echo "Installing fish from APT PPA..."

sudo add-apt-repository -y ppa:fish-shell/release-4
sudo apt-get update
sudo apt-get install -y fish
{{- else if .is_arch_like -}}
#!/usr/bin/env bash

echo "Installing fish from Pacman..."

sudo pacman -S --noconfirm fish
{{- end -}}
