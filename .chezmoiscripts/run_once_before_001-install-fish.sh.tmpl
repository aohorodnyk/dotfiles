{{- if .is_darwin -}}
#!/usr/bin/env sh

echo "Installing applications from Homebrew..."

brew install fish
{{- else if .is_debian_like -}}
#!/usr/bin/env sh

echo "Installing fish from APT PPA..."

sudo add-apt-repository -y ppa:fish-shell/release-4
sudo apt update
sudo apt install -y fish
{{- end -}}
