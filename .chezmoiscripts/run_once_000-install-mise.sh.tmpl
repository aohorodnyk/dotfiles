{{- if .is_darwin -}}
#!/usr/bin/env fish

echo "Installing mise from Homebrew..."

brew install mise

echo 'mise activate fish | source' > ~/.config/fish/conf.d/mise.fish
{{- else if .is_debian_like -}}
#!/usr/bin/env bash

echo "Installing mise from APT..."

ARCH=$(dpkg --print-architecture)

sudo install -dm 755 /etc/apt/keyrings
curl -fSs https://mise.jdx.dev/gpg-key.pub | sudo tee /etc/apt/keyrings/mise-archive-keyring.asc 1> /dev/null
echo "deb [arch=${ARCH} signed-by=/etc/apt/keyrings/mise-archive-keyring.asc] https://mise.jdx.dev/deb stable main" | sudo tee /etc/apt/sources.list.d/mise.list
sudo apt-get update
sudo apt-get install -y mise

echo 'mise activate fish | source' > ~/.config/fish/conf.d/mise.fish
{{- else if .is_arch_like -}}
#!/usr/bin/env bash

echo "Installing mise from APT..."

sudo pacman -S --noconfirm mise

echo 'mise activate fish | source' > ~/.config/fish/conf.d/mise.fish
{{- end -}}
